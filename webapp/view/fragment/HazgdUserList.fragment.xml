		<content>
			<f:SimpleForm width="auto" editable="true">
				<Label text="{i18n>Username}" required="true"/>
				<ComboBox id="cbHazgdAprv" showSecondaryValues="true" filterSecondaryValues="true"/>
				 
			</f:SimpleForm>
		</content>
		<beginButton>
