<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog title="{i18n>StreamChangeText}" contentWidth="500px">
		<content>
			<f:SimpleForm width="auto" editable="true">
				<Label text="{i18n>Stream}" required="true"/>
				<ComboBox id="cbStream"/>
				<Label text="{i18n>ChangeText}" required="true"/>
				<TextArea id="txtAreaStreamText" rows="4"/>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="{i18n>Cancel}" icon="sap-icon://sys-cancel" type="Reject" press="onPressStreamTextCancel"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>Add}" icon="sap-icon://accept" type="Accept" press="onPressStreamTextOK"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>