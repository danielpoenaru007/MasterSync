<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog title="{i18n>BasicDataText}" contentWidth="500px">
		<content>
			<f:SimpleForm width="auto" editable="true">
				<Label text="{i18n>Language}" required="true"/>
				<ComboBox id="cbSpras" showSecondaryValues="true" filterSecondaryValues="true"/>
				<Label text="{i18n>BasicDataText}" required="true"/>
				<TextArea id="txtAreaBasicText" rows="4"/>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="{i18n>Cancel}" icon="sap-icon://sys-cancel" type="Reject" press="onPressBasicTextCancel"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>Add}" icon="sap-icon://accept" type="Accept" press="onPressBasicTextOK"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>